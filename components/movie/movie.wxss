/* components/movie/movie.wxss */
.movie-banner{
  width: 100%;
  height: 100%;
}
.movie{
  width:100%;
  height:500rpx;
  position: relative;
  padding: 38rpx 0;
  box-sizing: border-box;
}
.music{
  width: 425rpx;
  height: 425rpx;
  border-radius: 50%;
  margin: 0 auto;
  position: relative;
}
.music image{
  border-radius: 50%;
}

.type{
  position: absolute;
  bottom: -23rpx;
  left: 30rpx;
  color: #888;
  letter-spacing: 30rpx;
  z-index: 1;
  width: 20rpx;
  display: flex;
  flex-direction: column; 
  font-size: 46rpx;
}
.line{
  height: 5rpx;
  line-height: 5rpx;
  margin-left: 30rpx;
}
.music-movie{
  animation: music-rotate 9s linear infinite;
}
@keyframes music-rotate {
  0%{
    transform: rotateZ(0deg)
  }
  100%{
    transform: rotateZ(360deg)
  }
}